{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "composite": false,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "skipLibCheck": true,
    "types": [
      "vuetify",
      "webpack",
      "webpack-env"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "../../node_modules/@types",
      "./node_modules/vutify/types"
    ],
    "paths": {
      "@/*": ["src/*"],
      "@models/*": ["src/models/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "package.json"
  ],
  "exclude": ["node_modules", "dist"]
}
